<?xml version="1.0"?>
<!-- Sync the column "surething_sales_person}" between the sales_order and sales_order_grid tables -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <virtualType name="Magento\Sales\Model\ResourceModel\Order\Grid">
        <arguments>
            <argument name="columns">
                <item name="surething_sales_person" xsi:type="string">sales_order.surething_sales_person</item>
            </argument>
        </arguments>
    </virtualType>
</config>

